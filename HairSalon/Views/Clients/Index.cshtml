@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h3>Current clients</h3>

@if(Model.Count == 0)
{
  <p>No clients have been added yet. Please add a client.</p>
}

<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }
</ul>

<button>
  @Html.ActionLink("Return home", "Index", "Home")
</button>